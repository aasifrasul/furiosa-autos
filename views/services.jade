extends _shared

block body
	.services
		h2 Services we provide

		//- Implement filtering here
		h3 Filter
		form(name="filter", method="post")
			div.input
				for filter in filterValues
					span.label(class='label-default')= filter
					input(type="checkbox", group="filter" , name= filter, checked= filterSelectedValues[filter], value= filter)
			div.actions
				input(type="submit", value="Filter")


		for service in services
			h4= service.job
			p= service.cost
			p= service.type

